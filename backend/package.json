{
  "name": "transaction-analysis-backend",
  "version": "1.0.0",
  "description": "交易分析DApp后端 - FHEVM + Solidity + Hardhat",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "hardhat compile",
    "test": "jest",
    "test:fhevm": "mocha test/FHEVM.test.js --timeout 30000",
    "test:fhevm-enhanced": "mocha test/FHEVMEnhanced.test.js --timeout 60000",
    "test:all": "npm run test && npm run test:fhevm && npm run test:fhevm-enhanced",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "deploy:fhevm": "node scripts/deploy-fhevm.js deploy",
    "verify:fhevm": "node scripts/deploy-fhevm.js verify",
    "deploy:full": "node scripts/deploy-fhevm.js full",
    "deploy:sepolia": "npx hardhat run --network sepolia scripts/deploy-sepolia.js",
    "export:abi": "node scripts/export-abi-to-frontend.js",
    "deploy:sepolia:export": "npm run deploy:sepolia && node scripts/export-abi-to-frontend.js"
  },
  "keywords": [
    "solidity",
    "hardhat",
    "fhevm",
    "defi",
    "blockchain",
    "api"
  ],
  "author": "Transaction Analysis Team",
  "license": "MIT",
  "dependencies": {
    "@fhevm/sdk": "^0.7.0-30",
    "@openzeppelin/contracts": "^5.4.0",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@zama-fhe/oracle-solidity": "^0.0.1",
    "chai": "^4.3.7",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "fhevm": "^0.6.2",
    "hardhat": "^2.26.3",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-gas-reporter": "^2.3.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "solidity-coverage": "^0.8.16",
    "supertest": "^6.3.3"
  },
  "type": "module"
}
